{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "composer install --no-dev --optimize-autoloader && php artisan config:clear && php artisan cache:clear"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "php artisan migrate --force && php -S 0.0.0.0:${PORT:-8080} -t public",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
